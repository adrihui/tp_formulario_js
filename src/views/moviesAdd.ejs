<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <p id="errores" class="text-danger text-center"></p>
    <br>
    <section id="formulario" >
        <article >
            <form action="/movies/create" method="POST" class="form" id="form" novalidate>
                <label for="title">Titulo </label>
                <p><input type="text" name="title" id="title" class="form-control <%= locals.errores && locals.errores.title ? 'is-invalid' : null %> "></p>
                <p id="error-title" class="text-danger small"></p>

                <label for="rating">Calificación </label>
                <p><input type="number" name="rating" id="rating" class="form-control <%= locals.errores && locals.errores.rating ? 'is-invalid' : null %> "> </p>
                <p id="error-rating" class="text-danger small"></p>

                <label for="awards">Premios </label>
                <p><input type="number" name="awards" id="awards" class="form-control <%= locals.errores && locals.errores.awards ? 'is-invalid' : null %> "></p>
                <p id="error-awards" class="text-danger small"></p>

                <label for="release_date">Fecha de creación </label>
                <p><input type="date" name="release_date" id="release_date" class="form-control <%= locals.errores && locals.errores.release_date ? 'is-invalid' : null %> "></p>
                <p id="error-release_date" class="text-danger small"></p>

                <label for="length">Duración </label>
                <p><input type="number" name="length" id="length" class="form-control <%= locals.errores && locals.errores.length ? 'is-invalid' : null %> "></p>
                <p id="error-length" class="text-danger small"></p>

                <label for="genreID">Género </label>
                <p>
                    <select name="genre_id" id="genre_id" class="form-control <%= locals.errores && locals.errores.genre_id ? 'is-invalid' : null %> ">
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                        <% }); %>
                    </select>
                    <p id="error-genre_id" class="text-danger small"></p>
                </p>
                <br>
                <p> <button class="botonAgregar" type="submit">Agregar</button>
                
                <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
            </form>
        </article>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/js/moviesAddValidation.js"></script>
</body>
</html>